{
  "name": "solitude",
  "version": "1.1.1",
  "description": "A Dark Room on your desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "asarUnpack": "music/**.*",
    "appId": "ru.chermenin.solitude",
    "productName": "Solitude",
    "win": {
      "target": [
        "nsis",
        "msi",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz",
        "snap"
      ],
      "icon": "build/icon.icns",
      "category": "Game",
      "executableName": "solitude",
      "desktop": {
        "Name": "Solitude",
        "Exec": "solitude",
        "Icon": "/usr/share/icons/hicolor/256x256/apps/solitude.png",
        "Type": "Application",
        "Categories": "Game"
      }
    },
    "nsis": {
      "oneClick": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chermenin/solitude.git"
  },
  "author": "Alex Chermenin <alex@chermenin.ru>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/chermenin/solitude/issues"
  },
  "homepage": "https://github.com/chermenin/solitude#readme",
  "dependencies": {
    "soundmanager2": "^2.97.20170602"
  },
  "devDependencies": {
    "electron": "^28.3.2",
    "electron-builder": "^24.13.3",
    "dot-prop": ">=4.2.1"
  }
}
